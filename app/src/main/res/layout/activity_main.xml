<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="bean"
            type="com.liu.qrscan.dataBean.MainActivityBean" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            tools:context=".MainActivity">
            <EditText
                android:layout_marginTop="5dp"
                android:id="@+id/et_qr_content"
                android:hint="输入需要生成的内容"
                android:textSize="16sp"
                android:text="@={bean.qrContent}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_todo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="生成二维码"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/btn_to_result"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="识别二维码"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_open_album"
                    android:text="打开相册"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/btn_open_camera"
                    android:text="打开相机"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_pre"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    app:gpuimage_show_loading="false"
                    app:gpuimage_surface_type="texture_view" />
                <TextView
                    android:id="@+id/tv_qr_result"
                    android:layout_marginTop="5dp"
                    android:hint="二维码识别结果："
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:text="@={bean.qrResult}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <GridView
                android:layout_margin="10dp"
                android:id="@+id/gv_filter"
                android:layout_height="400dp"
                android:layout_width="match_parent"
                android:numColumns="6"
                android:horizontalSpacing="2dp"
                android:verticalSpacing="2dp"
                />
        </LinearLayout>
    </ScrollView>
</layout>